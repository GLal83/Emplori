rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Team Members collection - authenticated users can read, only admins/recruiters can write
    match /teamMembers/{memberId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Clients collection - authenticated users can read and write
    match /clients/{clientId} {
      allow read, write: if isAuthenticated();
    }
    
    // Job Orders collection - authenticated users can read and write
    match /jobOrders/{jobId} {
      allow read, write: if isAuthenticated();
    }
    
    // Applicants collection - authenticated users can read and write
    match /applicants/{applicantId} {
      allow read, write: if isAuthenticated();
    }
    
    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

